generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Booking {
  id        String   @id @default(cuid()) // Unique Booking ID
  date      DateTime // Date of the booking
  time      DateTime // Time of the booking
  guests    Int      // Number of guests
  name      String   // Name of the person who booked
  email     String   // Email of the person who booked
  phone     String   // Phone number of the person who booked
  createdAt DateTime @default(now()) // Timestamp when the booking was created
  updatedAt DateTime @updatedAt      // Timestamp when the booking was last updated
}

